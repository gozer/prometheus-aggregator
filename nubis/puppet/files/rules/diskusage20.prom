ALERT DiskUsage20
  IF (node_filesystem_free{mountpoint="/"} / node_filesystem_size{mountpoint="/"} * 100 < 20) and {environment="prod"}
  FOR 60m
  LABELS {
    severity="warning",
    type="disk-usage",
    type="meta-failure"
  }
  ANNOTATIONS {
    summary = "",
    description = "Disk percentage free is {{ $value }} < 20%"
  }
